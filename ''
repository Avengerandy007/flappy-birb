using Vectors;
using Window;
using static SDL2.SDL;

class Player{
	IntVector2 position;
	bool moving;
	int speed = 3;
	int g = 2;
	
	System.Diagnostics.Stopwatch jumpStopwatch = new System.Diagnostics.Stopwatch();

	public Player(){
		position = new IntVector2(200, 240);
		jumpStopwatch.Start();
	}

	public void Update(){
		Gravity(ref position);
		Console.WriteLine($"Player X = {position.X} and Y = {position.Y}");
	}

	void Gravity(ref IntVector2 currPos){
		currPos.Y += g;
	}
	
	public void JumpEvent(){
		Jump(position);
	}
	
	void Jump(IntVector2 currPos){
		if (jumpStopwatch.Elapsed.TotalSeconds <= 2) moving = false;
		while((currPos.Y - position.Y) <= 250){
			position.Y -= speed;
			Thread.Sleep(50);
		}
	}
}
